@using Spendings.WEB.Models
@model RegisterLoginVm
@{
    ViewData["Title"] = "Log In";
}

<div class="row">
    <div class="col-12 col-xl-6">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-3">Log In</h1>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" value="@ViewBag.returnUrl" />
                    <div class="form-group">
                        <label class="form-label">Email address</label>
                        <input type="email" class="form-control" placeholder="Email" asp-for="Login.Username">
                        <span class="login-warning" asp-validation-for="Login.Username"></span>

                    </div>
                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Login.Password">
                        <span class="login-warning" asp-validation-for="Login.Password"></span>

                    </div>
                    <div class="form-group">
                        <label class="form-label">Remember me?</label>
                        <input type="checkbox" asp-for="Login.RememberMe" />
                        <span class="login-warning" asp-validation-for="Login.Password"></span>

                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <span class="login-warning">@Model?.LoginError</span>

                </form>
            </div>
        </div>
    </div>
